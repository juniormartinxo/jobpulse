# Seshat Configuration
# Generated automatically - customize as needed

project_type: python

# Commit defaults (equivalente a COMMIT_LANGUAGE, MAX_DIFF_SIZE, WARN_DIFF_SIZE)
commit:
  language: PT-BR
  max_diff_size: 5000
  warn_diff_size: 4000
  # provider: deepseek
  # model: deepseek-reasoner

# Pre-commit checks
checks:
  lint:
    enabled: true
    blocking: true
    auto_fix: false  # Change to true to fix automatically
  test:
    enabled: true
    blocking: true
  typecheck:
    enabled: true
    blocking: true

# AI Code Review
code_review:
  enabled: true
  blocking: true
  prompt: seshat-review.md  # Edite este arquivo!
  log_dir: seshat-logs
  extensions: [".py", ".pyi"]  # extensões padrão detectadas

# Custom commands (uncomment and modify as needed)
commands:
  ruff:
    command: "python -m ruff check ."
    extensions: [".py"]
    auto_fix: false
  mypy:
    command: "python -m mypy ."
  pytest:
    command: "python -m pytest"
